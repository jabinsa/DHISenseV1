<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shah.com.dhisensev1.SettingActivity"
    android:background="@drawable/bck">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/abc">

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Local Time"
                    android:id="@+id/systime"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_columnWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Device Time"
                    android:id="@+id/devtime"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginTop="10dp"
                    android:layout_columnWeight="1" />

                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textClock"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView5"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_marginTop="10dp"
                    android:layout_columnWeight="1"
                    android:text="12:00" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sync time"
                    android:id="@+id/button3"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_rowSpan="2"
                    android:layout_gravity="fill_vertical"
                    android:drawableTop="@drawable/sync"
                    android:background="@drawable/buttonstyle"
                    android:layout_columnWeight="1" />

            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/abc"
            android:layout_marginTop="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sampling frequency"
                    android:id="@+id/textView2"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:id="@+id/textView3"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_columnWeight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:id="@+id/button6"
                    android:drawableRight="@drawable/time"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:id="@+id/textView7"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_columnWeight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="5" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:id="@+id/button7"
                    android:drawableRight="@drawable/calender"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_columnWeight="1" />
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/abc"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELAY START"
                android:id="@+id/button8"
                android:drawableTop="@drawable/delay"
                android:background="@drawable/buttonstyle"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START lOG"
                android:id="@+id/button9"
                android:drawableTop="@drawable/startimm"
                android:background="@drawable/buttonstyle"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" STOP LOG"
                android:id="@+id/button10"
                android:drawableTop="@drawable/stop"
                android:background="@drawable/buttonstyle"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
